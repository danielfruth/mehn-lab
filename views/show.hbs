<h2>Slacker News</h2>
<nav>
    <a href="/posts/submit">Submit</a>
</nav>
<ul>
    {{#each posts}}
    <div>

        <a href="{{url}}">{{title}} </a>

        <span> {{createdAt}}</span>
        <p>{{description}}</p>
        <form action="/posts/{{_id}}?_method=delete" method="post">
            <input type="submit" value="delete">
        </form>
        <a href='/posts/{{_id}}/edit'>edit</a>

    </div>
    {{/each}}
</ul>